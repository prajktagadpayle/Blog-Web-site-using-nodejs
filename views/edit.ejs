<%- include('./partials/header'); -%>
<form action="/crunchSpot/<%= newPost._id %>?_method=PUT" method="POST">
    <center>
        <div class="container" id="newPost">
            <div class="formType">
                Edit Post
            </div> 
            <br>
            <br>
            <br>
            <label>title</label>
            <input type="text" name="newPost[title]" value="<%=newPost.title %>">
            <br>
            <label>image</label>
            <br>
            <input type="text" name="newPost[image]" value="<%=newPost.image%>">
            <br>
            <label>content</label>
            <br>
            <textarea name="newPost[content]" rows="5"><%=newPost.content%></textarea> 
            <input type="submit" class="btn-primary">
        </div>
    </center>
</form> 
    
<%- include('./partials/footer'); -%>